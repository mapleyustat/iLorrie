
#CXX  = aCC
#LD   = aCC
CXX  = g++
LD   = g++ 
AR   = ar rc

EXTRA_LIBS	 = 

CXXFLAGS     = -g
#CXXFLAGS     = -g 

INCS = 

OUTPUT= xmlib

all: ${OUTPUT}


#****************************************************************************
# objects 
#****************************************************************************

OBJS = tinyxml.o tinyxmlerror.o tinyxmlparser.o tinystr.o


#****************************************************************************
# Libs
#****************************************************************************
#****************************************************************************
# Output
#****************************************************************************

${OUTPUT}: $(OBJS) 
	$(AR) $@ $(OBJS)

#****************************************************************************
# common rules
#****************************************************************************

# Rules for compiling source files to object files
.cpp.o:
	${CXX} -c ${CXXFLAGS} ${INCS} $< -o $@

dist:
	bash makedistlinux

clean:
	-rm -f core ${OBJS} ${OUTPUT}

depend:
	#makedepend ${INCS} ${SRCS}
